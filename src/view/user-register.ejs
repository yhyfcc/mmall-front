<!DOCTYPE html>
<html lang="en">
<head>
    <%= require('!!html-loader!./layout/html-head.html') %>
    <title><%= htmlWebpackPlugin.options.title%> - happymmall</title>
</head>
<body>
<%= require('!!html-loader!./layout/nav-simple.html') %>
<div class="page-wrap">
    <div class="w">
        <div class="user-content">
            <div class="user-title">Sign up</div>
            <div class="user-box">
                <div class="error-item">
                    <p class="error-message">Error</p>
                </div>
                <div class="user-item">
                    <label for="username" class="user-label">
                    </label>
                    <input type="text" id="username"
                           class="user-input" placeholder="Please input your username" autocomplete="off">
                </div>
                <div class="user-item">
                    <label for="password" class="user-label">
                    </label>
                    <input type="password" id="password"
                           class="user-input" placeholder="Please input your password" autocomplete="off">
                </div>
                <div class="user-item">
                    <label for="password-confirm" class="user-label">
                    </label>
                    <input type="password" id="password-confirm"
                           class="user-input" placeholder="Please input your password again" autocomplete="off">
                </div>
                <div class="user-item">
                    <label for="tel" class="user-label">
                    </label>
                    <input type="text" id="tel"
                           class="user-input" placeholder="Please input your phone number" autocomplete="off">
                </div>
                <div class="user-item">
                    <label for="email" class="user-label">
                    </label>
                    <input type="email" id="email"
                           class="user-input" placeholder="Please input your email" autocomplete="off">
                </div>
                <div class="user-item">
                    <label for="Password reset question" class="user-label">
                    </label>
                    <input type="text" id="password-reset-question"
                           class="user-input" placeholder="Please provide a question used for password reset" autocomplete="off">
                </div>
                <div class="user-item">
                    <label for="Password reset question answer" class="user-label">
                    </label>
                    <input type="email" id="password-reset-answer"
                           class="user-input" placeholder="Please provide the answer to the question" autocomplete="off">
                </div>
                <a href="#" class="btn btn-submit" id="submit">Sign up</a>
                <div class="link-item">
                    <a href="./user-register.html" class="link" target="_blank">Already signed up? Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="loading">
    <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
</div>
<%= require('!!html-loader!./layout/footer.html') %>
</body>
</html>