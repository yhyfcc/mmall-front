<!DOCTYPE html>
<html lang="en">
<head>
    <%= require('!!html-loader!./layout/html-head.html') %>
    <title><%= htmlWebpackPlugin.options.title%> - happymmall</title>
</head>
<body>
<%= require('!!html-loader!./layout/nav-simple.html') %>
<div class="page-wrap">
    <div class="w">
        <div class="user-content">
            <div class="user-title">Login</div>
            <div class="user-box">
                <div class="error-item">
                    <p class="error-message">Error</p>
                </div>
                <div class="step-con step-username">
                    <div class="user-item-text">Please input your username</div>
                    <div class="user-item">
                        <label for="username" class="user-label">
                        </label>
                        <input type="text" id=username
                               class="user-input" placeholder="Please input your username" autocomplete="off">
                    </div>
                    <a href="#" class="btn btn-submit" id="submit-username">Next step</a>
                </div>
                <div class="step-con step-question hide">
                    <div class="user-item-text">Password reset question is <span class="question"></span></div>
                    <div class="user-item">
                        <label for="answer" class="user-label">
                        </label>
                        <input type="text" id=answer
                               class="user-input" placeholder="Please input your answer to the question" autocomplete="off">
                    </div>
                    <a href="#" class="btn btn-submit" id="submit-question">Next step</a>
                </div>
                <div class="step-con step-password hide">
                    <div class="user-item-text">Please input new password <span class="question"></span></div>
                    <div class="user-item">
                        <label for="password" class="user-label">
                        </label>
                        <input type="password" id=password
                               class="user-input" placeholder="Please input your new password" autocomplete="off">
                    </div>
                    <a href="#" class="btn btn-submit" id="submit-password">Next step</a>
                </div>



                <div class="link-item">
                    <a href="./user-login" class="link" target="_blank">Login>></a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="loading">
    <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
</div>
<%= require('!!html-loader!./layout/footer.html') %>
</body>
</html>
