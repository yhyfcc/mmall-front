<!DOCTYPE html>
<html lang="en">
<head>
    <%= require('!!html-loader!./layout/html-head.html') %>
    <title><%= htmlWebpackPlugin.options.title%> - happymmall</title>
<body>
<%= require('!!html-loader!./layout/nav.html') %>
<%= require('!!html-loader!./layout/header.html') %>
<div class="crumb">
    <div class="crumb-con w">
        <a href="./index.html" class="link">MMall</a>
        <span>></span>
        <span class="link-text"><%= htmlWebpackPlugin.options.title%></span>
    </div>
</div>
<div class="page-wrap w">
    <%= require('!!html-loader!./layout/nav-side.html') %>
    <div class="content with-nav">
        <div class="panel">
            <div class="panel-title">Change password</div>
            <div class="panel-body">
                <div class="user-info">
                    <div class="form-line">
                        <span class="label">Old password:</span>
                        <input type="password" class="input" id="password" autocomplete="off">
                    </div>
                    <div class="form-line">
                        <span class="label">New password:</span>
                        <input type="password" class="input" id="new-password" autocomplete="off">
                    </div>
                    <div class="form-line">
                        <span class="label">Confirm new password:</span>
                        <input type="password" class="input" id="new-password-confirm" autocomplete="off">
                    </div>
                    <span class="btn btn-submit">Submit change</span>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="loading">
    <div class="lds-ring"><div></div><div></div><div></div><div></div></div>
</div>
<%= require('!!html-loader!./layout/footer.html') %>
</body>
</html>